{
  "manifest_version": 3,
  "name": "Add Contract Data to Fangraphs Leaders Page",
  "description": "Extension to add player contract data to the Fangraphs leader page",
  "version": "1.4.2",
  "permissions": [
    "activeTab",
    "webNavigation",
    "*://www.fangraphs.com/leaders/major-league*",
    "storage"
  ],
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/content.js"
      ],
      "css": [
        "styles/content.css"
      ],
      "matches": [
        "<all_urls>"
      ],
         "run_at": "document_end"
    }
  ]
}